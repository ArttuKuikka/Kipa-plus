@model IEnumerable<Kipa_plus.Models.Kisa>

@{
    ViewData["Title"] = "Kisat";
}

<div class="grid-container">

    @foreach (var item in Model)
    {
        <div class="grid-item" onClick="location.href='/Kisa/@item.Id'">@item.Name</div>
    
    }
    <div class="grid-item" onClick="location.href='/Kisa/Create'"><img class="grid-item-image" alt="Luo kisa" src="/images/Nayta_rastit.png">Luo kisa</div>
</div>
