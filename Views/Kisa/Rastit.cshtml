@model IEnumerable<Kipa_plus.Models.Rasti>
@using Kipa_plus.Models

@{
    ViewData["Title"] = "Rastit";
}

<h1>Rastit</h1>


<button type="button" class="btn btn-light" onclick="location.href = '/Kisa/@ViewBag.KisaId/LuoRasti?kisaId=@ViewBag.KisaId';">Luo uusi</button>
<table class="table" style="color: white">
    <thead><tr></tr></thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    
                    @{
                        var Sarjat = ViewData["Sarjat"] as List<Sarja>;
                       
                        

                    }
                    <h4>@item.Nimi</h4>
                    
                </td>
               
                
                <td>
                    <button type="button" class="btn btn-light" onclick="location.href = '/Tag?RastiId=@item.Id';">Skannaa tag</button>
