                    <button type="button" class="btn btn-light" onclick="location.href = '/Tehtava/?RastiId=@item.Id';">Tehtävät</button>
                    <button type="button" class="btn btn-danger" onclick="location.href = '/Kisa/@ViewBag.KisaId/PoistaRasti?RastiId=@item.Id';">Poista</button>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
