@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Omat tiedot";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>Voit ladata tai poistaa tältä sivulta kaikki sinun tietosi jotka ovat tietokannassamme</p>
        <p>
            <strong>Kaikkien tietojen poistaminen poistaa tilisi pysyvästi, tätä ei voi peruuttaa!</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary" type="submit">Lataa omat tiedot</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Poista omat tiedot</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
