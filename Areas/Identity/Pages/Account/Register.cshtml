@page
@model RegisterModel
@{
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8">
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Rekisteröidy - Kipa-Plus</title>
    <link rel="stylesheet" href="/css/Login.css">
</head>
<body class="align" style="background-color:black">



    <div class="grid" style="background-color: #606468;/*! size: 200px; */border-radius: 10px;">
        <div class="content">
            <h2>Rekisteröidy</h2>
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form login">

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form__field">
                    <label for="login__LiittymisId"><svg class="icon"><use xlink="http://www.w3.org/1999/xlink" xlink:href="#input"></use></svg><span class="hidden">LiittymisId</span></label>
                    <input asp-for="Input.LiittymisId" autocomplete="LiittymisId" type="text" class="form__input form-control" placeholder="LiittymisId" aria-required="true" value="@Model.ModelLiittymisId" />

                </div>
                <span asp-validation-for="Input.LiittymisId" class="text-danger"></span>

                
                <div class="form__field">
                    <label for="login__name"><svg class="icon"><use xlink="http://www.w3.org/1999/xlink" xlink:href="#user"></use></svg><span class="hidden">Nimi</span></label>
                    <input asp-for="Input.KokoNimi" autocomplete="name" type="text" class="form__input form-control" placeholder="Nimi" aria-required="true" />

                </div>
                <span asp-validation-for="Input.KokoNimi" class="text-danger"></span>
                
                
                <div class="form__field">
                    <label for="login__username"><svg class="icon"><use xlink="http://www.w3.org/1999/xlink" xlink:href="#user"></use></svg><span class="hidden">Sähköposti</span></label>
                    <input asp-for="Input.Email" autocomplete="email" type="text" class="form__input form-control" placeholder="Sähköposti" aria-required="true" />

                </div>
                <span asp-validation-for="Input.Email" class="text-danger"></span>


                <div class="form__field">
                    <label for="login__password"><svg class="icon"><use xlink="http://www.w3.org/1999/xlink" xlink:href="#lock"></use></svg><span class="hidden">Password</span></label>
                    <input asp-for="Input.Password" type="password" autocomplete="current-password" class="form__input form-control" placeholder="Salasana" aria-required="true">

                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>

                <div class="form__field">
                    <label for="login__password"><svg class="icon"><use xlink="http://www.w3.org/1999/xlink" xlink:href="#lock"></use></svg><span class="hidden">Varmista salasana</span></label>
                    <input asp-for="Input.ConfirmPassword" type="password" autocomplete="new-password" class="form__input form-control" placeholder="Varmista salasana" aria-required="true">

                </div>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>


                
                <div class="form__field">
                    <input type="submit" value="Rekisteröidy">
                </div>
            </form>
            <h2 class="text--center"><a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" style="text-decoration: underline;">Kirjaudu sisään</a></h2>
            <h4 class="text--center">2023 - Arttu Kuikka - <a href="https://github.com/ArttuKuikka/Kipa-plus" style="text-decoration: underline;">Kipa-Plus</a></h4>

        </div>

    </div>

    <svg xmlns="http://www.w3.org/2000/svg" class="icons">
        <symbol id="arrow-right" viewBox="0 0 1792 1792">
            <path d="M1600 960q0 54-37 91l-651 651q-39 37-91 37-51 0-90-37l-75-75q-38-38-38-91t38-91l293-293H245q-52 0-84.5-37.5T128 1024V896q0-53 32.5-90.5T245 768h704L656 474q-38-36-38-90t38-90l75-75q38-38 90-38 53 0 91 38l651 651q37 35 37 90z" /></symbol>
        <symbol id="lock" viewBox="0 0 1792 1792">
            <path d="M640 768h512V576q0-106-75-181t-181-75-181 75-75 181v192zm832 96v576q0 40-28 68t-68 28H416q-40 0-68-28t-28-68V864q0-40 28-68t68-28h32V576q0-184 132-316t316-132 316 132 132 316v192h32q40 0 68 28t28 68z" /></symbol>
        <symbol id="user" viewBox="0 0 1792 1792"><path d="M1600 1405q0 120-73 189.5t-194 69.5H459q-121 0-194-69.5T192 1405q0-53 3.5-103.5t14-109T236 1084t43-97.5 62-81 85.5-53.5T538 832q9 0 42 21.5t74.5 48 108 48T896 971t133.5-21.5 108-48 74.5-48 42-21.5q61 0 111.5 20t85.5 53.5 62 81 43 97.5 26.5 108.5 14 109 3.5 103.5zm-320-893q0 159-112.5 271.5T896 896 624.5 783.5 512 512t112.5-271.5T896 128t271.5 112.5T1280 512z" /></symbol>
        <symbol id="input" viewBox="0 0 1792 1792">
            <style type="text/css">
            .st0{fill:none;stroke:#000000;stroke-width:2;stroke-linecap:round;stroke-linejoin:round;stroke-miterlimit:10;}
            </style>
            <rect x="3" y="12" class="st0" width="26" height="10" />
            <line class="st0" x1="6" y1="15" x2="10" y2="15" />
            <line class="st0" x1="8" y1="19" x2="8" y2="15" />
            <line class="st0" x1="11" y1="8" x2="15" y2="8" />
            <line class="st0" x1="11" y1="26" x2="15" y2="26" />
            <line class="st0" x1="13" y1="26" x2="13" y2="8" />
            </symbol>
     </svg>
</body>
</html>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
